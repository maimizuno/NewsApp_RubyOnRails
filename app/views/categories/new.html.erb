<!------------ New Category page for admins ------------>
<h2>Add new category</h2>
<!-- horizontal line -->
<hr/>
<!-- New Category form -->
<%= form_with(model: @category, url: create_category_path, method: :post, local: true) do |f| %>
  <!-- Category Name field -->
  <div class="mb-3">
    <%= f.label :name, "Category Name", class: "col-form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter New Category Name", required: true %>
  </div>
  <!-- Submit button -->
  <div class="mb-3">
    <%= f.submit "Create", class: "btn btn-primary align-self-start" %>
  </div>
<% end %>

<!-- If the data is not saved, display an error message -->
<div class="mb-3">
  <% if flash[:alert] %>
    <p class="text-danger fw-bold"><%= flash[:alert] %></p>
  <% end %>
</div>

<!-- Link to the previous page -->
<div><%= link_to "<< Back", list_categories_path, style: "text-decoration: none;" %></div>
