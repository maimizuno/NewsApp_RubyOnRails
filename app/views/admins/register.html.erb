<!------------ Register page for new admins ------------>
<!-- if registration fails, display an error message-->
<% if flash[:alert] %>
  <p class="text-danger fw-bold"><%= flash[:alert] %></p>
<% end %>
<!-- Page title -->
<h2>Register</h2>
<!-- horizontal line -->
<hr/>
<!-- Register form -->
<%= form_with model: @admin, url: register_path, method: :post, class: "row g-3" do |f| %>
  <div class="col-md-6">
    <!-- Username field -->
    <div class="mb-3 row">
      <div class="col-sm-10">
        <%= f.label :username, class: "col-form-label" %>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", required: true %>
      </div>
    </div>
    <!-- Password field -->
    <div class="mb-3 row">
      <div class="col-sm-10">
        <%= f.label :password, class: "col-form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password", required: true %>
      </div>
    </div>
    <!-- Password confirmation field -->
    <div class="mb-5 row">
      <div class="col-sm-10">
        <%= f.label :password_confirmation, class: "col-form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password", required: true %>
      </div>
    </div>
    <!-- Submit button -->
    <div class="col-sm-10">
      <%= f.submit "Register", class: "btn btn-primary" %>
    </div>
    <!-- Link to login page -->
    <p class="mt-3">
      <%= link_to "Already have an account?", show_login_path, style: "text-decoration: none;" %>
    </p>
  </div>
<% end %>
